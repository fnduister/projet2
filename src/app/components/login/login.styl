
.background{
    background-image: url('../../../assets/login-background.jpg');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    width: 100vw;
    height: 100vh;
    z-index: 0;
    position relative;
    }

mat-card{
    z-index: 100;
    opacity : 0.9;
    width: 250px;
   padding: 2em;
}

h3{
    margin-bottom: 2em;
}

h1, h3 {
    color: #63a4ff;
}

mat-form-field{
    margin: .6em 0;
}

mat-form-field:first-child{
    margin-bottom: 2em;
}

.overlay{
    background-color: #000;
    width: 100%;
    height: 100%;
    opacity: 0.8;
    z-index: 10;position absolute;
    top 0;
    }

button{
    padding: 0.2em;
}

.wrapper{
     width: 100%;
    height: 100%;
    display: grid;
    grid-auto-rows: minmax(400px,auto);
    justify-items: center;
    align-items: center;
    
}
mat-form-field{
    width: 100%;
}

@media only screen and (min-width: 768px) {
    .wrapper{
        width: 100%;
        height: 100%;
        display: grid;
        grid-auto-rows: minmax(400px,auto);
        justify-items: end;
        align-items: center;
    }
    .form{
        padding: 2em;
    }
    mat-card{
            z-index: 100;
            opacity : 0.6;
            width: 25vw;
            padding: 3em 2em;
    }
}

